{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@config/*": ["./src/shared/config/*"],
      "@strategies/*": ["./src/shared/infrastructure/strategies/*"],
      "@filters/*": ["./src/shared/presentation/filters/*"],
      "@guards/*": ["./src/shared/presentation/guards/*"],
      "@auth/*": ["./src/modules/auth/*"],
      "@user/*": ["./src/modules/user/*"],
    },
  }
}
